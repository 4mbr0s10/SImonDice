<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Botones"
    android:background="@color/rojo_apagado">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIMON DISE MANISE"
        tools:ignore="MissingConstraints"
        android:id="@+id/diseManise"/>

    <Button
        android:id="@+id/botonRojo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@color/rojo_apagado"
        android:text="@string/rojo"
        app:layout_constraintEnd_toStartOf="@+id/botonVerde"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diseManise" />

    <Button
        android:id="@+id/botonVerde"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/verde_apagado"
        android:text="@string/verde"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/diseManise"
        />

    <Button
        android:id="@+id/botonAmarillo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/amarillo_apagado"
        android:text="@string/amarillo"
        android:textColor="#263238"
        app:layout_constraintEnd_toStartOf="@+id/botonAzul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonRojo" />

    <Button
        android:id="@+id/botonAzul"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/azul_apagado"
        android:text="@string/azul"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp" android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/botonVerde"/>
</androidx.constraintlayout.widget.ConstraintLayout>